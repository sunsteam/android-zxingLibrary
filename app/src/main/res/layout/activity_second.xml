<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_my_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <include layout="@layout/common_no_status_title_with_btn" />

    <TextView
        android:layout_width="@dimen/dp_203"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_430"
        android:background="@drawable/rect_13rd_88000000"
        android:gravity="center"
        android:text="将条形码放入框内，即可自动扫描"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:id="@+id/camera_light"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_gravity="start|bottom"
        android:gravity="center"
        android:text="闪光灯"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:drawableTop="@drawable/ic_action_camera_light"
        />

</FrameLayout>
