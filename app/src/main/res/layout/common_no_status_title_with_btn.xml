<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="#fff">

    <View
        android:id="@+id/title_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_in_action"/>


    <TextView
        android:id="@+id/title_caption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_space"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        tools:text="标题" />

    <TextView
        android:id="@+id/title_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/title_space"
        android:gravity="center"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:onClick="moveBack"
        />

    <TextView
        android:id="@+id/title_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_below="@id/title_space"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"/>

</RelativeLayout>